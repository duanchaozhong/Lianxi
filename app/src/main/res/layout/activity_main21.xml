<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.duan.lianxi.Main21Activity">
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/button1"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/p10">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="75%"
            app:layout_widthPercent="75%"
            android:layout_centerInParent="true"
            android:background="@drawable/imag3">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="50%"
            android:layout_centerInParent="true"
            android:background="@drawable/imag13">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%"
            android:layout_centerInParent="true"
            android:background="@drawable/imag6">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="12.5%"
            app:layout_widthPercent="12.5%"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent">
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button1">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/bg"
            android:layout_weight="1">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:layout_weight="1">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@mipmap/tab_more_select"
            android:layout_weight="1">

        </LinearLayout>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
